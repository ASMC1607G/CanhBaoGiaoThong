<Page
    x:Class="BingMap.UserInfor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BingMap"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontFamily="Georgia"
                   FontSize="50">Profile</TextBlock>

        <TextBlock Grid.Row="1"
                   FontSize="20"
                   FontFamily="Georgia"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0">Email</TextBlock>
        <TextBlock x:ConnectionId='1' x:Name="EmailTextBlock"
                 FontFamily="Georgia"
                 VerticalAlignment="Center"
                 Grid.Row="1"
                 FontSize="18"
                 Grid.Column="1"
                 Margin="5,0,0,0"/>

        <TextBlock Grid.Row="2"
                   FontSize="20"
                   FontFamily="Georgia"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0">Name</TextBlock>
        <TextBlock x:ConnectionId='2' x:Name="NameTextBock"
                 FontFamily="Georgia"
                 VerticalAlignment="Center"
                 Grid.Row="2"
                 Grid.Column="1"
                 FontSize="18"
                 Margin="5,0,0,0"/>

        <TextBlock Grid.Row="3"
                   FontSize="20"
                   FontFamily="Georgia"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0">Address</TextBlock>
        <TextBlock x:ConnectionId='3' x:Name="AddressTextBlock"
                 FontFamily="Georgia"
                 VerticalAlignment="Center"
                 Grid.Row="3"
                 Grid.Column="1"
                 FontSize="18"
                 Margin="5,0,0,0"/>

        <TextBlock Grid.Row="4"
                   FontSize="20"
                   FontFamily="Georgia"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0">Phone</TextBlock>
        <TextBlock x:ConnectionId='4' x:Name="PhoneTextBlock"
                 FontFamily="Georgia"
                 VerticalAlignment="Center"
                 Grid.Row="4"
                 Grid.Column="1"
                 FontSize="18"
                 Margin="5,0,0,0"/>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2">
            <Button x:ConnectionId='5' x:Name="LogoutButton"  
                                               
                    Content="Logout"/>
            <Button x:ConnectionId='6' x:Name="HomeButton"  
                                             
                    Content="Home" 
                    Margin="50,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

